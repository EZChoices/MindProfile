generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Profile {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  clientId           String?  @db.VarChar(64)
  sourceMode         String   @db.VarChar(32)
  confidence         String
  thinkingStyle      String
  communicationStyle String
  strengthsJson      Json
  blindSpotsJson     Json
  suggestedJson      Json
  rawText            String
  model              String   @default("gpt-4.1-mini")
  promptVersion      String   @default("v0.1")
  inputCharCount     Int
  inputSourceHost    String?
  promptTokens       Int?
  completionTokens   Int?
  deletedAt          DateTime?
  resonance          String?
  feedbackText       String?
  feedbackAt         DateTime?
  mindCard           Json?

  @@index([clientId, createdAt])
  @@index([createdAt])
  @@index([sourceMode])
}
